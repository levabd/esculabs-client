<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Balder" Height="768" Width="1024" Loaded="Window_Loaded" HorizontalAlignment="Center" VerticalAlignment="Center" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <local:StatusBackgroundConverter x:Key="StatusBackgroundConverter" />
        <local:StatusTextConverter x:Key="StatusTextConverter" />
    </Window.Resources>
    <Grid Margin="0">
        <TextBox x:Name="nameFilterTextBox" GotFocus="nameFilterTextBox_GotFocus" LostFocus="nameFilterTextBox_LostFocus" TextChanged="nameFilterTextBox_TextChanged" HorizontalAlignment="Left" Height="26" Margin="10,8,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="350" IsEnabled="False"/>
        <DatePicker x:Name="dateFilterDatePicker" Loaded="dateFilterDatePicker_Loaded"  SelectedDateChanged="dateFilterDatePicker_SelectedDateChanged" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="350" Height="26" FirstDayOfWeek="Monday" IsEnabled="False">
        </DatePicker>        
        <Button x:Name="clearNameFilterButton" Click="clearNameFilterButton_Click" Content="Очистить" HorizontalAlignment="Left" Margin="365,8,0,0" VerticalAlignment="Top" Width="74" Height="26" IsEnabled="False"/>
        <Button x:Name="clearDateFilterButton" Click="clearDateFilterButton_Click" Content="Очистить" HorizontalAlignment="Left" Margin="365,38,0,0" VerticalAlignment="Top" Width="74" Height="26" IsEnabled="False"/>
        <Canvas HorizontalAlignment="Right" Height="51" Margin="442,8,2,0" VerticalAlignment="Top" Width="268">
            <Button x:Name="button" Content="Button" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Width="88" Height="51"/>
            <Button x:Name="button_Copy" Content="Button" HorizontalAlignment="Center" Margin="90,0,0,0" VerticalAlignment="Top" Width="88" Height="51"/>
            <Button x:Name="button_Copy1" Content="Button" HorizontalAlignment="Center" Margin="180,0,0,0" VerticalAlignment="Top" Width="88" Height="51"/>
        </Canvas>
        <DataGrid x:Name="patientsGrid" Loaded="patientsGrid_Loaded" Margin="0,68,0,0" AutoGenerateColumns="False" HorizontalAlignment="Stretch" HorizontalGridLinesBrush="Gray" VerticalGridLinesBrush="Gray" RowHeight="25" IsReadOnly="True">
            <DataGrid.DataContext>
                <local:TablePatient/>
            </DataGrid.DataContext>
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" FontWeight="Bold" Header="#" Width="80"/>
                <DataGridTextColumn Binding="{Binding Name}" Header="Ф. И. О." MinWidth="200" Width="*"/>
                <DataGridTextColumn Binding="{Binding PhibrosisStage}" Header="Стадия фиброза" CanUserResize="False" Width="100"/>
                <DataGridTextColumn Binding="{Binding LastExamineDate}" Header="Последнее сканирование" Width="155"/>
                <DataGridTextColumn Header="Проверка системой" Width="140">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Background" Value="{Binding LocalStatus, Converter={StaticResource StatusBackgroundConverter}}"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="Text" Value="{Binding LocalStatus, Converter={StaticResource StatusTextConverter}}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Проверка экспертом" Width="140">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Background" Value="{Binding ExpertStatus, Converter={StaticResource StatusBackgroundConverter}}"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="Text" Value="{Binding ExpertStatus, Converter={StaticResource StatusTextConverter}}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Click="ShowHideDetails">Просмотр</Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
            <DataGrid.BindingGroup>
                <BindingGroup/>
            </DataGrid.BindingGroup>
        </DataGrid>

    </Grid>
</Window>
